<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPlayer"
        android:id="@+id/activity_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_high"
            android:background="@android:color/black"
            android:layout_marginTop="@dimen/activity_horizontal_margin">


            <ImageButton
                android:id="@+id/button_play"
                android:src="@drawable/ic_play_circle_outline_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/buttonPlay"/>

            <ImageButton
                android:id="@+id/button_pause"
                android:src="@drawable/ic_stop_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/buttonPause"
                android:background="@android:color/black"
                android:layout_toLeftOf="@id/button_play"
                android:layout_toStartOf="@id/button_play"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"/>

            <ImageButton
                android:id="@+id/button_mute"
                android:src="@drawable/ic_volume_up_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_toRightOf="@id/button_play"
                android:layout_toEndOf="@id/button_play"
                android:contentDescription= "@string/mute"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/song_text"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@android:color/black"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>